<% include layout_top %>
<div class="content">
    <div class="topic-detail border">
        <div class="topic-header">话题详情</div>
        <div class="topic-title"><h3><%= topic.title %></h3><hr /></div>
        <div class="topic-content"><%= topic.content %><hr /></div>
        <div class="topic-info">
            <p>
            <span class="topic-nickname">作者：<%= topic.nickname %></span>
            <span class="topic-time">发布时间：<%= topic.time %></span>
            <span class="topic-time">查看数：<%= topic.viewCount %></span>
            </p>
            <p>
            <% if(user === topic.user) { %>
            <a id="btn_drop_topic" href="javascript:;" class="btn btn-primary" data-topic-id="<%= topic._id %>">删除话题</a>
            <% } %>
            </p>
        </div>
    </div>
    <div class="comment-list border">
        <div class="topic-header"><%= topic.replyCount%>评论
            <% if(user) { %>
            <a id="btn_new_comment" href="javascript:;" class="btn btn-primary">新评论</a>
            <% } %>
        </div>
        <div id="comment_list">
        <% if(topic.comment) { %>
        <% var floor = 1; %>
        <% topic.comment.forEach(function(comment){ %>
        <div class="comment-detail">
            <div class="comment-info">
                <span class="topic-nickname">作者：<%= comment.nickname %></span>
                <span class="topic-time">发布时间：<%= comment.time %></span>
                <span class="floor">#<%= floor %></span>
            </div>
            <div class="comment-content"><%= comment.content %></div>
        </div>
        <% floor++; %>
        <% }) %>
        <% } %>
        </div>
    </div>
</div>
<div class="sidebar">
    侧栏
</div>
<div id="topic_comment_template" style="display:none;">
    <div class="comment-detail" style="display:none;">
        <div class="comment-info">
            <span class="topic-nickname"></span>
            <span class="topic-time"></span>
            <span class="floor">新回复</span>
        </div>
        <div class="comment-content"></div>
    </div>
</div>
<div id="modal_new_comment" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">发布新评论</h3>
    </div>
    <div class="modal-body">
        <form id="form_new_comment" action="/new_topic_comment" method="post">
            <input id="topic_id" name="topic_id" type="hidden" value="<%= topic._id %>"/>
            <fieldset>
                <p>
                <textarea id="content" name="content" rows="10" cols="30" class="input-xlarge"></textarea>
                </p>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        <button id="btn_comment_publish" class="btn btn-primary">发布</button>
    </div>
</div>
<script type="text/javascript" src='/javascripts/jquery.validate.min.js'></script>
<script type="text/javascript">
$(document).ready(function() {
    $("#btn_drop_topic").on("click", function() {
        var topicId = $(this).attr("data-topic-id");
        $.post('/drop_topic', {"topic_id": topicId}, function(data) {
            alert(data.message);
            window.location.href = "/";
        });
    });

    $("#btn_new_comment").on("click", function() {
        $("#content").val("");
        $("#modal_new_comment").modal("show");
    });

    $('#form_new_comment').validate({
        rules : {
            content: {
                required: true
            }
        },
        messages : {
            content: {
                required: '评论不能为空'
            }
        }
    });

    $("#btn_comment_publish").click(function() {
        if($("#form_new_comment").valid()) {
            var posting = $.post("/new_topic_comment", $("#form_new_comment").serialize());
            posting.done(function(data) {
                if(data.result) {
                    $('#modal_new_comment').modal('hide');
                    var $comment = $("#topic_comment_template").find(".comment-detail").clone();
                    $comment.find('.topic-nickname').text("作者：" + data.comment.nickname);
                    $comment.find('.topic-time').text("发布时间：" + data.comment.time);
                    $comment.find('.comment-content').text(data.comment.content);
                    $("#comment_list").prepend($comment);
                    $comment.fadeIn(2000);
                } else {
                    alert('发布失败');
                }
            });
        }
    });
});
</script>
<% include layout_bottom %>
