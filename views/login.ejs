<% include layout_top %>
<h1>登陆</h1>
<div class="container">
    <form id="form_login" action="login" method="post">
        <fieldset>
            <p>
            <label>邮箱</label>
            <input id="email" type="text" name="email">
            </p>
            <p>
            <label>密码</label>
            <input id="password" type="password" name="password">
            </p>
            <p>
            <input id="btn_login" type="submit" value="登陆" class="btn">
            </p>
        </fieldset>
    </form>
</div>
<script type="text/javascript" src='/javascripts/jquery.validate.min.js'></script>
<script type="text/javascript">
$(document).ready(function() {
$('#form_login').validate({
        rules : {
            email: {
                required: true,
                email: true
            },
            password: {
                required: true,
                minlength: 6
            }
        },
        messages : {
            email: {
                required : '邮箱不能为空',
                email: '请填写正确的邮箱地址'
            },
            password: {
                required: '密码不能为空',
                minlength: '密码最少为6位'
            }
        }
    });
});
</script>
<% include layout_bottom %>
